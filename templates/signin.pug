{% extends "base.pug" %}

{% block pagename %}Sign in{% end %}

{% block content %}
form(action="/signin" method="post")
  div.form-group
    label(for='username') username:
    input#name.form-control(type="text" name='username')
  div.form-group
    label(for='password') password:
    input#pass.form-control(type="password" name='password')
  input(type="submit" value="Sign in")
{% end %}
